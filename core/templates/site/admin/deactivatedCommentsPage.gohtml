{{ template "head" $ }}
<h2>{{ cd.PageTitle }}</h2>
<table class="table table-bordered">
<tr><th>ID</th><th>Excerpt</th><th>Link</th></tr>
{{- range .Comments }}
<tr>
<td>{{ .Idcomments }}</td>
<td>{{ if .Text.Valid }}{{ left 40 .Text.String }}{{ end }}</td>
<td><a href="/admin/comment/{{ .Idcomments }}">View</a></td>
</tr>
{{- end }}
</table>
{{ template "tail" $ }}
