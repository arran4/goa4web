{{ template "head" $ }}
    {{ if .Blog }}
        <form method="post" action="">
        {{ csrfField }}
            <!-- Title <input name="title" value=""><br> -->
            Blog:<br>
            <textarea id="text" name="text" cols=40 rows=20>{{.Blog.Blog.String}}</textarea><br>
            <button type="button" class="preview-a4code" data-target="text" data-preview-url="/blogs/preview">Preview</button>
            <div class="form-group hidden" id="preview-container">
                <div id="preview-content" class="preview-box"></div>
            </div>
            Author Labels:<br>
            <div class="label-editor">
            {{ range .AuthorLabels }}
                <span class="label pill author">{{ . }}<button type="button" class="remove" data-type="author">x</button><input type="hidden" name="author" value="{{ . }}"/></span>
            {{ end }}
                <input type="text" class="label-input" data-type="author" placeholder="Add author label"/>
            </div>
            {{ template "languageCombobox" }}
            <input type="submit" name="task" value="{{ .Mode }}">
        </form>
        <script src="{{ assetHash "/forum/topic_labels.js" }}"></script>
    {{ else }}
        Dead. No BLOG!
    {{ end }}
{{ template "tail" $ }}
