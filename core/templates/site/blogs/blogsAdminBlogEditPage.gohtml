{{ template "head" $ }}
{{ if .Blog }}
    <form method="post" action="{{ .PostURL }}">
    {{ csrfField }}
        Blog:<br>
        <textarea name="text" cols=40 rows=20>{{ .Blog.Blog.String }}</textarea><br>
        {{ template "languageCombobox" }}
        <input type="submit" name="task" value="{{ .Mode }}">
    </form>
{{ else }}
    Dead. No BLOG!
{{ end }}
{{ template "tail" $ }}
