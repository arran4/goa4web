{{ template "head" $ }}
<h1>Set New Password</h1>
{{- if cd.CurrentError }}
<p class="text-error">{{ cd.CurrentError }}</p>
{{- end }}
<form method="post">
    {{ csrfField }}
    <label>New Password: <input type="password" name="password" required></label><br>
    <label>Confirm Password: <input type="password" name="confirm_password" required></label><br>
    <button type="submit" name="task" value="Password Reset">Reset Password</button>
</form>
{{ template "tail" $ }}
