{{ template "head" $ }}
		<font size="5"><a href="/blogs/blogger/{{$.Blog.Username.String}}">{{$.Blog.Username.String}}'s Blog</a>:</font><br>
		<table width="100%">
                <tr>
                    <th bgcolor="lightgrey">{{$.Blog.Written}}</th>
                </tr>
                <tr>
                    <td>
                        {{$.Blog.Blog.String | a4code2html}}<br><br>{{$.Blog.Username.String}} - [<a href="/blogs/blog/{{$.Blog.Idblogs}}/comments">{{$.Blog.Comments}} COMMENTS</a>]
                        {{if $.Blog.IsEditable}} - [<a href="/blogs/blog/{{$.Blog.Idblogs}}/edit">EDIT</a>]{{end}}
                    </td>
                </tr>
		</table><br>
		{{ template "printThread" $ }}
		{{if $.Blog.IsReplyable}}
			<font size="4">Reply:</font><br>
			<form method="post">
				<textarea name="replytext" cols="40" rows="20"></textarea><br>
				<input type=hidden name="bid" value="{{$.Blog.Idblogs}}">
				<input type="submit" name="task" value="Reply">
			</form>
		{{end}}
{{ template "tail" $ }}