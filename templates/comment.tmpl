{{ define "comment" }}
    <table width="100%">
        <tr bgcolor="lightgrey">
            <th>{{.Written}}</th>
        </tr>
        <tr>
            <td>
                {{.Text.String | a4code2html}}<br>-<br>{{.Username.String}}.
                {{if .ShowReply}}
                    [<a href="/blogs/blog/{{.Idblogs}}/comment/{{.Idcomments}}/reply?offset={{.Offset}}&type=full#reply">FULL REPLY</a>]
                    [<a href="/blogs/blog/{{.Idblogs}}/comment/{{.Idcomments}}/reply?offset={{.Offset}}#reply">PARAGRAPH REPLY</a>]
                {{end}}
                {{if $.Editable }}
                    [<a href="/blogs/blog/{{.Idblogs}}/comment/{{.Idcomments}}/edit#edit">EDIT</a>]
                {{end}}
            </td>
        </tr>
    </table><br>
{{ end }}