{{ define "threadBreadcrumbs" }}
    [
        <a href="/forum">Forum:</a>
        {{ range .CategoryBreadcrumbs }}
            <a href="/forum/category/{{.Idforumcategory}}">{{.Title.String}}</a>:
        {{ end }}
